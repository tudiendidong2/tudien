<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <menu xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <item
            android:icon="@drawable/ic_delete"
            android:id="@+id/menuImage"
            android:title="Hình ảnh"
            app:showAsAction="always"></item>
    </menu>
    <RelativeLayout
        android:id="@+id/rlSearch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText1"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:ems="10"
            android:hint="Tìm từ">

            <requestFocus />
        </EditText>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlSearch"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/list_view_item_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:width="0dp"
            android:clickable="false"
            android:focusable="false" />

        <TextView
            android:id="@+id/txtCharacter1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="7"
            android:hint="từ đã tra"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/imageButtonMP3"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/ic_speaker_24" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_grade_black_24dp" />

    </LinearLayout>


</RelativeLayout>